                        const projectSkills = [
                            ...project.querySelectorAll(".badge"),
                        ].map((badge) => badge.dataset.skill);
                        const hasAllSkills = allActiveSkills.some(
                            (activeSkill) => projectSkills.includes(activeSkill)
                        );
                        project.classList.toggle(
                            "project-card--hidden",
                            !hasAllSkills
                        );
                    });
                }

                function toggleProjects() {
                    const projectCards =
                        document.querySelector(".project-cards");
                    projectCards.classList.toggle(
                        "project-cards--collapsed",
                        !projectCards.classList.contains(
                            "project-cards--collapsed"
                        )
                    );
                }

