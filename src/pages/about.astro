interface Project {
    name: string;
    description: string;
    link: string;
    image: string;
    skills: string[];
    repo: string;
    repoType: string;
}

function sortSkillsInPlaceByList(
    projectsData: Project[],
    sortedSkills: string[]
): void {
    // Sort the skills in place for each project based on the provided sorted skills array
    for (let project of projectsData) {
        project.skills.sort((a, b) => {
            return sortedSkills.indexOf(a) - sortedSkills.indexOf(b);
        });
    }
}

