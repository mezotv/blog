---
import "../styles/global.css";

import Navigation from "../components/Navigation.astro";
import Head from "../components/Head.astro";
import { getCollection } from "astro:content";
import Analytics from "../components/Analytics.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const unsortedarticles = await getCollection("blog");
const articles = unsortedarticles.sort(
    (a, b) => b.data.date.getTime() - a.data.date.getTime()
);
---

<html lang="en">
    <head>
        <Head />
        <ViewTransitions />
        <title>Webry's articles</title>
        <meta
            name="description"
            content="Discover Webry's latest articles on web development, JavaScript, and more."
        />
        <link rel="canonical" href="https://www.webry.com/articles/" />
        <Analytics />

        <style>
            body {
                text-align: center;
            }

            main {
                margin-top: 6rem;
            }
        </style>
    </head>
    <body>
        <Navigation />
        <main class="container">
            <section class="flow-content-big">
                <h1 class="font-bold">All Articles</h1>
                <section class="articles">
                    <div class="articles__grid">
                        {
                            articles.map((post) => (
                                <article
                                    class="card"
                                    itemtype="http://schema.org/BlogPosting"
                                >
                                    <img
                                        transition:animate="morph"
                                        transition:name={`article-cover-${post.data.devtoid}`}
                                        src={post.data.cover}
                                        alt="JSDoc Typing"
                                        class="card-img"
                                        itemprop="image"
                                    />
                                    <div class="card__content flow-content">
                                        <h2 class="card-title">
                                            {post.data.title}
                                        </h2>
                                        <p class="card-description">
                                            {post.data.share.description}
                                        </p>
                                    </div>
                                    <div class="flex-spacer" />
                                    <a
                                        class="btn card-button w-full"
                                        aria-label={
                                            "Read more about " + post.data.title
                                        }
                                        href={`/article/${post.slug}`}
                                    >
                                        Read Article
                                    </a>
                                </article>
                            ))
                        }
                    </div>
                </section>
            </section>
        </main>
        <Footer />
        <style>
            main {
                min-height: 75vh;
            }
        </style>
    </body>
</html>
